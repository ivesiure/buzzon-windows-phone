<UserControl x:Class="BuzzOn.UI.UserControls.UcLoading"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">

    <Grid x:Name="LayoutRoot" Visibility="Visible">
        <Rectangle Margin="0,0,0,0" Fill="Black" />
        <TextBlock Name="txtMensagem" HorizontalAlignment="Center" Style="{StaticResource PhoneTextSubtleStyle}" Margin="0,0,0,50" TextWrapping="Wrap" Text="Carregando..." VerticalAlignment="Center"/>
        <ProgressBar IsIndeterminate="True" />
    </Grid>
</UserControl>